<Window x:Class="autumncolour.triangles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autumncolour"
        mc:Ignorable="d"
        Title="triangles" Height="300" Width="300">
    <Grid>
        <Polygon Points="0,0,30,0, 0,30" Stroke="Black" Fill="ForestGreen"/>
        <Polygon Points="0,30,30,30,30,0" Stroke="Black" Fill="DarkGreen" />
        <Polygon Points="30,0,60,0, 30,30" Stroke="Black" Fill="ForestGreen"/>
        <Polygon Points="30,30,60,30,60,0" Stroke="Black" Fill="DarkGreen" />
        <Polygon Points="0,60,30,60,30,30" Stroke="Black" Fill="ForestGreen"/>
        <Polygon Points="0,60,30,30,0,30" Stroke="Black" Fill="LightGreen"/>
        <Polygon Points="30,30,60,30,30,60" Stroke="Black" Fill="lawnGreen"/>
        <Polygon Points="30,60,60,60,60,30" Stroke="Black" Fill="DarkGreen" />
        <Polygon Points="30,60 60,60 60,30" Stroke="Black" Fill="DarkGreen" />
    </Grid>
</Window>
